    "@emotion/styled": "^11.11.0",
    "@supabase/ssr": "^0.1.0",
    "@supabase/supabase-js": "^2.39.3",
    "axios": "^1.6.7",
    "bcryptjs": "^3.0.3",
    "date-fns": "^3.3.1",
    "framer-motion": "^10.18.0",
    "gsap": "^3.12.5",
    "hls.js": "^1.6.15",
    "next": "14.1.0",
    "next-auth": "^4.24.13",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.0.1",
    "react-player": "^2.14.1",
    "swiper": "^11.0.5",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^3.0.0",
