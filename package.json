{
  "name": "animeweb",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"next dev\"",
    "dev:api": "cd ../aniwatch-api && npm run dev",
    "dev:next": "next dev",
    "build": "NODE_OPTIONS='--max-old-space-size=2048' next build",
    "build:fast": "NODE_OPTIONS='--max-old-space-size=2048' next build",
    "start": "concurrently \"npm run start:api\" \"next start\"",
    "start:api": "cd ../aniwatch-api && npm run buildnstart",
    "lint": "next lint",
    "launch": "node loader/start.js"
  },
  "dependencies": {
    "@auth/supabase-adapter": "^1.11.1",
